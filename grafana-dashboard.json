{
    "dashboard": {
        "id": null,
        "uid": "goa-trip-dashboard",
        "title": "Goa Holiday Packages - Application Metrics",
        "tags": [
            "nodejs",
            "express",
            "monitoring"
        ],
        "timezone": "browser",
        "refresh": "5s",
        "panels": [
            {
                "id": 1,
                "type": "graph",
                "title": "HTTP Request Rate",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "rate(http_requests_total[5m])",
                        "legendFormat": "{{method}} {{route}}"
                    }
                ]
            },
            {
                "id": 2,
                "type": "graph",
                "title": "Response Time",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "rate(http_request_duration_ms_sum[5m]) / rate(http_request_duration_ms_count[5m])",
                        "legendFormat": "Avg Response Time"
                    }
                ]
            },
            {
                "id": 3,
                "type": "stat",
                "title": "CPU Usage",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 0,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "process_cpu_user_seconds_total",
                        "legendFormat": "CPU"
                    }
                ]
            },
            {
                "id": 4,
                "type": "stat",
                "title": "Memory Usage",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 6,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "process_resident_memory_bytes",
                        "legendFormat": "Memory"
                    }
                ]
            },
            {
                "id": 5,
                "type": "graph",
                "title": "Event Loop Lag",
                "gridPos": {
                    "h": 4,
                    "w": 12,
                    "x": 12,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "nodejs_eventloop_lag_seconds",
                        "legendFormat": "Event Loop Lag"
                    }
                ]
            },
            {
                "id": 6,
                "type": "graph",
                "title": "Active Handles",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 12
                },
                "targets": [
                    {
                        "expr": "nodejs_active_handles_total",
                        "legendFormat": "Active Handles"
                    }
                ]
            },
            {
                "id": 7,
                "type": "graph",
                "title": "Heap Usage",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 12
                },
                "targets": [
                    {
                        "expr": "nodejs_heap_size_used_bytes",
                        "legendFormat": "Heap Used"
                    },
                    {
                        "expr": "nodejs_heap_size_total_bytes",
                        "legendFormat": "Heap Total"
                    }
                ]
            }
        ],
        "schemaVersion": 16,
        "version": 0
    }
}